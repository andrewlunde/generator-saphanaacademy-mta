{
  "xsappname": "<%= projectName %>",
  "tenant-mode": "dedicated",
  "scopes": [
    {
      "name": "$XSAPPNAME.User",
<% if(app2appType === "authorize"){ -%>
<% if(app2appMethod.includes("user")){ -%>
      "granted-apps": ["$XSAPPNAME(application,<%= app2appName %>)"],
<% } -%>
<% if(app2appMethod.includes("machine")){ -%>
      "grant-as-authority-to-apps": ["$XSAPPNAME(application,<%= app2appName %>)"],
<% } -%>
<% } -%>
      "description": "User"
    },
    {
      "name": "$XSAPPNAME.Admin",
      "description": "Admin"
    }
  ],
<% if(authorization){ -%>
<% if(app2appType === "access"){ -%>
<% if(app2appMethod.includes("user")){ -%>
  "foreign-scope-references": ["$ACCEPT_GRANTED_SCOPES"],
<% } -%>
<% if(app2appMethod.includes("machine")){ -%>
  "authorities": ["$ACCEPT_GRANTED_AUTHORITIES"],
<% } -%>
<% } -%>
<% if(attributes){ -%>
  "attributes": [
    {
        "name": "Region",
        "description": "Region",
        "valueType": "string"
    }
  ],
<% } -%>
  "role-templates": [
    {
      "name": "User",
      "description": "User",
<% if(attributes){ -%>
      "attribute-references": [
        {
            "name": "Region"
        }
      ],
<% } -%>
      "scope-references": [
        "$XSAPPNAME.User"
      ]
    },
    {
      "name": "Admin",
      "description": "Admin",
      "scope-references": [
        "$XSAPPNAME.Admin"
      ]
    }
  ],
  "role-collections": [
<% if(!attributes){ -%>
    {
      "name": "<%= projectName %>_User",
      "description": "<%= projectName %> User",
      "role-template-references": [
        "$XSAPPNAME.User"
      ]
    },
<% } -%>
    {
      "name": "<%= projectName %>_Admin",
      "description": "<%= projectName %> Admin",
      "role-template-references": [
        "$XSAPPNAME.Admin"
      ]
    }
  ]
<% }else{ -%>
  "scopes": [
    {
      "name": "uaa.user",
      "description": "Token Exchange"
    }
  ],
  "role-templates": [
    {
      "name": "TOKEN_EXCHANGE",
      "scope-references": [
        "uaa.user"
      ]
    }
  ]
<% } -%>
}
